<%= render 'shared/header' %>

<div class="form-container">
  <div class="admin-groups-form">
    <h1>New Group</h1>

    <% if @group.errors.any? %>
      <div class="error-messages">
        <h2>There were errors:</h2>
        <ul>
          <% @group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: @group, url: admin_groups_path, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :creator %>
        <%= form.text_field :creator, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :text %>
        <%= form.text_area :text, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit 'Create Group', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
