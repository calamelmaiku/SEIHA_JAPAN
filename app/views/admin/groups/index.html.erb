<!-- app/views/admin/groups/index.html.erb -->
<%= render 'shared/header' %>

<h1>Groups</h1>

<%= link_to 'New Group', new_admin_group_path, class: 'btn-primary' %>

<table class="admin-groups-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td>
          <%= link_to 'Show', admin_group_path(group), class: 'btn-show' %>
          <%= link_to 'Edit', edit_admin_group_path(group), class: 'btn-edit' %>
          <%= link_to 'Delete', admin_group_path(group), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn-delete' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>