<%# app/assets/stylesheets/admin/admin_groups.css %>

<%= render 'shared/header' %>

<div class="admin-groups">
  <h1>グループテーブル</h1>

  <%= link_to 'New Group', new_admin_group_path, class: 'new-group' %>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.name %></td>
          <td>
            <%= link_to 'Show', admin_group_path(group) %>
            <%= link_to 'Edit', edit_admin_group_path(group) %>
            <%= link_to 'Delete', admin_group_path(group), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
