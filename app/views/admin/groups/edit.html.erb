<%= render 'shared/header' %>

<div class="form-container">
  <div class="admin-groups-form">
    <h1>Edit Group</h1>

    <%= form_with(model: @group, url: admin_group_path(@group), local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :creator %>
        <%= form.text_field :creator, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :text %>
        <%= form.text_area :text, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit 'Update Group', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
