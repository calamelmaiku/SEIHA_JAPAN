<%= render 'shared/header' %>

<div class="form-container">
  <div class="admin-groups-form">
    <h1>Edit Spot</h1>

    <% if @spot.errors.any? %>
      <div class="error-messages">
        <h2>There were errors:</h2>
        <ul>
          <% @spot.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: [@group, @spot], url: admin_group_spot_path(@group, @spot), local: true, method: :patch) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :text %>
        <%= form.text_area :text, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :address %>
        <%= form.text_field :address, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :latitude %>
        <%= form.number_field :latitude, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :longitude %>
        <%= form.number_field :longitude, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit 'Update Spot', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
