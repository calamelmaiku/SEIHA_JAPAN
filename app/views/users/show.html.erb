<%= render 'shared/header' %>

<div class="user-details-container">
  <%= link_to @user.name, edit_user_path(@user), class: "user-edit" %>


  <h2>達成率</h2>
  <table class="user-groups-table">
    <thead>
      <tr>
        <th>グループ名</th>
        <th>達成率</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.name %></td>
          <td><%= @group_completion_rates[group.id] %>%</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
