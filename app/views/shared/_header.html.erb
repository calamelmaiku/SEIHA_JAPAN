<%# CSS・・・assets/stylesheets/header.css %>
<header class='top-page-header'>
  <div class='bar'>
    <div> <%= link_to "セイハ！", "/", class:"app-name" %> </div>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
    <% if user_signed_in? %>
      <% if current_user.admin? %>  <%# 管理者専用リンク %>
        <li><%= link_to '管理者ページ', admin_groups_path, class: "admin-link" %></li>
      <% end %>
      <li><%= link_to current_user.name, user_path(current_user), class: "user-name" %></li> 
      <li><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout" %></li>
    <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
    <% end %>
    </ul>
  </div>
</header>
