<%# CSS・・・assets/stylesheets/group/index.css %>
<!-- 共通ヘッダーを読み込む -->
<%= render 'shared/header' %>

<div class="wrapper">
  <div class="chanel">
    <div class="groups">
      <% @groups.each do |group| %>
        <div class="group">
          <div class="group-name">
            ○<%= link_to group.name, group_path(group), class: "group-name" %>
          </div>
          <div class="group-text">
            <%= group.text %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
