<%# CSS・・・assets/stylesheets/group/index.css %>
<%= render 'shared/header' %>

<div class="wrapper">
  <div class="chanel">
    <div class="groups">
      <% @groups.each do |group| %>
        <div class="group">
          <div class="group-name">
            ○<%= link_to group.name, group_path(group), class: "group-name" %>
              <% if user_signed_in? %>
              <% completion_rate = @group_completion_rates[group.id] %>
              <span class="completion-rate">(達成率: <%= completion_rate %>%)</span>
            <% end %>
          </div>
          <div class="group-text">
            <%= group.text %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
